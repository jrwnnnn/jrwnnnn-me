---
interface Props {
    class?: string;
    onclick?: string;
}

const { class: additionalClasses = '', onclick = '' } = Astro.props;
---
<button class={`px-3 py-2 border border-green-500 text-green-500 hover:bg-green-500 hover:text-black focus:bg-green-500 focus:text-black cursor-pointer ${additionalClasses}`} onclick={onclick}>
    <slot />
</button>